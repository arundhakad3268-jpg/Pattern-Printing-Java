public class pattern {
    public static void main(String[] args) {
        int n = 5;
        for(int i = n; i >= 1; i--) {

            // Inner loop to print * or ?
            for (int j = 0; j <= n - i; j++) {
                if(i == 3) {
                    System.out.print("$");
                } else {
                    System.out.print("*");
                }
            }

            // Move to next line
            System.out.println();
        }
    }
}
